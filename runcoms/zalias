#
# Git alias
#

# checker
alias checkGit='for D in */
do
echo
echo checking $D |lolcat
echo
if [ -d $D/.git ] ; then
cd $D
git status
sleep 1
cd ..
else
echo $D is not a git repo |lolcat
fi
echo
done'
alias checkGitRec="
find . -print0 | while IFS= read -r -d '' f
do
echo $f
if [ -d $f/.git ] ; then
cd $f
pwd | lolcat
git status
sleep 1
cd -
fi
done"

# common one
